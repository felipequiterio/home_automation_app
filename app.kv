<label>:

     font_name: 'Roboto'

     font_size: 20

     markup: True

<Card@MDCard>:

     orientation: "vertical"

     padding: "8dp"

     size_hint: None, None

     size: "280dp", "180dp"



MDScreen:

     id: home

     MDFloatLayout:

          adaptive_height: False

          md_bg_color: (17/255, 23/255, 27/255)

          MDTopAppBar:

               pos_hint:{'center_x': 0.5, 'center_y': .95}

               elevation: 10

               md_bg_color: (16/255, 24/255, 28/255, 1)

               height: self.height

               width: self.width

               Card:
                    size: "300dp", '100dp'
                    #height: 400
                    #width: 400
                    pos_hint: {"center_x":.9, "center_y":.5}

                    MDIcon:

                         icon: "clock-time-four-outline"

                         pos_hint:{'center_x': .95, 'center_y': .75}

                         #size_hint_x: None

                         #size_hint_y: None

                         width: 100

                         height: 100

                    MDLabel:

                         id: time

                         text: '[b]00[/b]:00:00'

                         pos_hint:{'center_x': 1, 'center_y': .75}

                         size_hint_x: None

                         size_hint_y: None

                         width: 300

                         height: 100

          Card:
               pos_hint: {"center_x":.5, "center_y":.5}
